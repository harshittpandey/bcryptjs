  <form method="post" action="/hash/hash">
	  <div class="w3-container ">
		  <input class="w3-input w3-border w3-round-xlarge" style="width: 550px" name="password" placeholder="Password">
	  </div>
	  <div class=" w3-margin-top" style="margin-left: 35%"><button type="submit" class=" w3-padding-large w3-grey w3-btn">Submit</button></div>
  </form>
</div>

